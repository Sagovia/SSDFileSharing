<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Account Home - SSDFileSharing</title>
  <style>

   html, body {
      height: 100%;
    }

    body {
      margin: 0;
      display: flex;
      font-family: Arial;
      background-color: white;
      color: darkgray;
      flex-direction: column;
    }

    .header {
      padding: 1.5rem 2rem;
      text-align: center;
      background: #005f99;
      color: white;
    }
    .header h1 {
      font-size: 2rem;
      margin: 0;
    }

    a {
      text-decoration: none;
      color: #005f99;
    }

    .section {
      padding: 1.5rem;
      border-radius: 10px;
      background: white;
    }
    .section h2 {
      margin-top: 0;
      color: #005f99;
    }


    .upload-button {
      color: white;
      font-size: 1rem;
      margin: 2rem auto;
      cursor: pointer;
      text-align: center;
      padding: 1rem 2rem;
      max-width: 400px;
      background: #007bb5;
      width: 90%;
    }

    .sections {
      flex-direction: column;
      padding: 0 2rem;
      flex: 1;
      display: flex;
      gap: 2rem;
    }
    


    .box .actions {
      font-size: 0.9rem;
      color: #005f99;
      margin-top: 0.5rem;
    }


    .box {
      border-radius: 4px;
      padding: 1rem;
      flex: 1 1 0%;
      background: whitesmoke;
      border: 1px solid whitesmoke;
      min-width: 250px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      position: relative;
    }
    .box-container {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
    }
    .box h3 {
      margin: 0 0 0.5rem 0;
      font-size: 1rem;
      color: #003d66;
    }

    .box .actions a {
      margin-right: 0.5rem;
    }
    .box form {
      display: inline;
    }


    .create-folder-button {
      cursor: pointer;
      text-align: center;
      padding: 0.75rem 1.5rem;
      margin-bottom: 1rem;
      border: none;
      color: whitesmoke;
      border-radius: 4px;
      background: #007bb5;
      display: inline-block;
    }



    footer {
      background: #005f99;
      color: whitesmoke;
      padding: 1rem 2rem;
      text-align: right;
      font-size: 1rem;
    }
  </style>
</head>
<body>
  <!-- Header -->
  <header class="header">
    <h1>Welcome, <%= username %>!</h1>
  </header>

  <!-- Upload File Button -->
  <div class="upload-button" onclick="window.location.href='<%= uploadLink %>'">
    Upload a file
  </div>

  <!-- Main Sections -->
  <div class="sections">
    <!-- Files Section -->
    <div class="section">
      <h2>Your Uploaded Files</h2>
      <div class="box-container">
        <% fileNames.forEach((fileName, index) => { %>
          <div class="box">
            <h3><%= fileName %></h3>
            <div class="actions">
              <a href="<%= fileDetailLinks[index] %>" rel="noopener noreferrer">View Details</a>
              <a href="<%= filePermissionLinks[index] %>" rel="noopener noreferrer">Permissions</a>
              <form action="<%= fileDeletionLinks[index] %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this file?');">
                <button type="submit">Delete File</button>
              </form>
            </div>
          </div>
        <% }); %>
      </div>
    </div>

    <!-- Folders Section -->
    <div class="section">
      <h2>Your Folders</h2>
      <div>
        <a href="<%= createFolderLink %>" class="create-folder-button" rel="noopener noreferrer">Create a new folder</a>
      </div>
      <div class="box-container">
        <% folderNames.forEach((folderName, index) => { %>
          <div class="box">
            <h3><%= folderName %></h3>
            <div class="actions">
              <a href="<%= viewFolderLinks[index] %>" rel="noopener noreferrer">Open Folder</a>
              <a href="<%= folderPermissionLinks[index] %>" rel="noopener noreferrer">Permissions</a>
              <form action="<%= folderDeletionLinks[index] %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this folder?');">
                <button type="submit">Delete Folder</button>
              </form>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer>
    Uploading files since 2025
  </footer>
</body>
</html>
