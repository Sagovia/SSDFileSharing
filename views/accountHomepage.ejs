<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Home</title>
</head>
<body>
    <h1>Welcome, <%= username %>!</h1>
    
    <h2>Your Uploaded Files</h2>
    <ul>
        <% fileNames.forEach((fileName, index) => { %>
            <li>
                <%= fileName %>: 
                <a href="<%= fileDetailLinks[index] %>" target="_blank" rel="noopener noreferrer">View Details</a>,
                <a href="<%= fileDeletionLinks[index] %>" target="_blank" rel="noopener noreferrer">Delete file</a>,
                <!-- Secure Delete Button using POST request -->
                <form action="<%= fileDeletionLinks[index] %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this file?');">
                    <button type="submit">Delete File</button>
                </form>
            </li>
        <% }); %>
    </ul>
</body>
</html>
